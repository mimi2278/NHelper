{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES6",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "lib": ["DOM", "ES2015", "ES2016", "ES2017", "ES2018", "ES2019", "ES2020"],
    "strict": false,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "outDir": ".",
    "declaration": true
  },
  "include": ["**/*.ts"]
}
